<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.abocha.coolviewsapplication.views.RiskPointsView
        android:id="@+id/risk_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        app:emptyPointsColor="@android:color/darker_gray"
        app:pointRadius="10dp"
        app:pointsColor="@android:color/background_dark"
        app:pointsCount="5" />

    <com.abocha.coolviewsapplication.views.LikeSelector
        android:id="@+id/likes_compound_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp" />
    <!--  app:likesCounter="6"-->

    <Button
        android:id="@+id/change_color_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Практика со сменой цвета" />

    <Button
        android:id="@+id/change_orientation_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Смена ориентации у LinearLayout" />

    <Button
        android:id="@+id/support_landscape_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Поддержка landscape" />

    <Button
        android:id="@+id/long_text_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Длинный текст" />

    <Button
        android:id="@+id/toast_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Показ тоста" />
</LinearLayout>